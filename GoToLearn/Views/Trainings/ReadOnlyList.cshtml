@model IEnumerable<GoToLearn.Models.Training>

@{
    ViewBag.Title = "Trainings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trainings</h2>
<
+<table id="trainings" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Training</th>
        <th>Field</th>
        
    </tr>

    </thead>
    <tbody>
      
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#trainings").DataTable({
                ajax: {
                    url: "/api/trainings",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title"

                    },
                    {
                        data: "field.name"
                    },
                    {
                        data: "id",
                       render: function(data, type, training) {
                            return "<a href='/trainings/details/" + training.id + "'>" + training.addeddate + "</a>";
                        }
                    }
                ]
            });


            
        });
    </script>
}