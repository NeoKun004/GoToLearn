@using GoToLearn.Models
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register as a learn for GoToLearn</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Smart Login Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <link href="~/Style/css/style.css" rel="stylesheet" type="text/css" media="all">
    <!-- online-fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900iSlabo+27px&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <!--//online-fonts -->
</head>
<body>
    <!--header-->
    <div class="agileheader">
        <h1>GoTOLEARN</h1>
    </div>
    <!--//header-->
    <!--main-->
    <div class="main-w3l">
        <div class="w3layouts-main">
            <h2>Register Now</h2>
           @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
           {
            @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter your Login", type = "email" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail", type = "email" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = " Confirm Password" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = " Your first Name", type = "userfield" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = " Your last Name", type = "userfield" })
                </div>

                <div class="form-group">
                    Male:   @Html.RadioButtonFor(m => m.Gender, "Male", new { @class = "form-control"  })
                    Female: @Html.RadioButtonFor(m => m.Gender, "Female", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control", placeholder = " Your date of birth", type = "userfield" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = " Your Country", type = "userfield" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Level, new { @class = "form-control", placeholder = " Your Starting Level", type = "userfield" })
                </div>
                <div>
                    Pay As You Go :   @Html.RadioButtonFor(m => m.membershiptype, "Pay as you go", new { @class = "form-control" })
                    Monthly : @Html.RadioButtonFor(m => m.membershiptype, "Monthly", new { @class = "form-control" })
                    Quarterly : @Html.RadioButtonFor(m => m.membershiptype, "Quarterly", new { @class = "form-control" })
                    Annual : @Html.RadioButtonFor(m => m.membershiptype, "Annual", new { @class = "form-control" })
                </div>

                    <div class="clear"></div>

                    
                    <input type="submit" value="Register" name="login">


                    }

                    <p>
                        @Html.ActionLink("Register as a Trainer", "TrainerRegister")
                    </p>
                </div>
    </div>
    <!--//main-->
    <!--footer-->
    <div class="footer-w3l">
        <p>© 2017 GoToLearn</p>
    </div>
    <!--//footer-->

</body>
</html>
